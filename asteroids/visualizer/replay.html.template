					V.lineTo(p3x, p3y);
					V.lineTo(p1x, p1y);
					V.closePath();
					V.stroke();
					}
				//~ V.translate(-x,-y)
				//~ if ( im[img] && im[img].data )
					//~ V.drawImage(im[img], x,y)
				//~ V.rotate(-r)
*/
			}
		}
        function stop() {
            clearInterval(tick)
            tick=-1
        }
        function back() {
            stop()
            if ( the_turn > 0 ) 
                the_turn -= 1
            draw_frame(the_turn)
        }
        function forw() {
            stop()
            if ( the_turn < nturns-1 ) 
                the_turn += 1
            draw_frame(the_turn)
        }
        function pos(t) {
            stop()
            the_turn = t
            draw_frame(the_turn)
        }
        function play() {
            tick = setInterval( function() {
                if (the_turn < nturns)
                {
                    draw_frame(the_turn)
                    the_turn += 1
                } else {
                    stop()
                }
            },200)
        }
		init()
	</script>
</canvas>
